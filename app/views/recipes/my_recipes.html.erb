  <div class="px-4 py-6">
    <ul class="w-full gap-4 mt-4 text-white">
      <% @recipes.each do |recipe|%>
      <li class="pb-4 mb-4 bg-black bg-opacity-50 rounded-lg p-8 my-8">
        <div class="justify-between flex">
              <div class="flex flex-col w-1/3">
          <h3 class="font-semibold text-white">
            <%= link_to recipe.name, recipe_path(recipe.id), class: "text-white hover:underline" %>
          </h3>
                    <% if can?(:destroy, recipe) %>
<%= button_to "Remove", recipe_path(recipe.id), method: :delete, data: { confirm: "Are you sure?" }, class: "font-semibold mt-4 bg-red-500 hover:bg-red-600 text-white text-bold py-1 px-2 rounded self-end" %>
          <% end %>
                      </div>
            <div  class="flex-1">
              <p class="py-4 px-2 flex flex-col"><%= recipe.description %></p>
            </div>
        </div>
      </li>
    <% end %>
  </ul>
  </div>
