<% if user_signed_in? %>
  <nav class="mx-4 bg-gray-700 px-4 py-6 ">
    <div class="container mx-auto flex justify-between items-center">
      <div class="text-white cursor-none text-2xl font-semibold">
        Ultimate Recipe Assistant
      </div>
      <div class="space-x-4 flex">
        <%= link_to "My Recipes", my_recipes_path, class: "nav-button" %>
        <%= link_to "Public Recipes", public_recipes_path, class: "nav-button" %>
        <!-- Add Shopping List and Foods buttons here after creating them -->
      </div>
      <%= link_to "Add Recipe", new_recipe_path, id: "new-recipe", class: "nav-button" %>
      <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-button signout" %>
    </div>
  </nav>
<% end %>

<style>
  /* Inline styles for .nav-button class */

  nav{
    margin-bottom:5rem;
  }
  .nav-button {
    color: white;
    font-weight: bold;
    padding: 8px 16px;
    border-radius: 8px;
    text-decoration: none;
    background-color: #3498db;
    transition: all 0.3s ease-in-out;
    cursor: pointer;
  }

  .nav-button:hover {
    background-color: #2980b9;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  }

  .signout{
    background-color: #BE254B;
  }

  .signout:hover{
    background-color: #791010;
    color: #FFFFFF;
  }
</style>
