<div class="table-responsive mt-4 w-full">
  <div class="flex w-full flex-end flex-row-reverse">
    <%= link_to "Add food", "foods/new", class: "bg-sky-600 text-white font-semibold px-4 py-2 hover:shadow-2xl rounded-lg hover:bg-sky-500 transform transition-transform duration-300 ease-in-out hover:no-underline shadow-2xl shadow-sky-500 mb-4" %>
  </div>
  <table class="w-full bg-black bg-opacity-50 shadow-md rounded-lg overflow-hidden">
    <thead class="bg-black bg-opacity-75 border-b text-white">
      <tr>
        <th class="text-left py-3 px-4">Food</th>
        <th class="text-left py-3 px-4">Measurement Unit</th>
        <th class="text-left py-3 px-4">Price</th>
        <th class="text-left py-3 px-4">Quantity</th>
        <th class="text-left py-3 px-4">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr class="border-b text-white">
          <td class="py-3 px-4"><%= food.name %></td>
          <td class="py-3 px-4"><%= food.measurement_unit %></td>
          <td class="py-3 px-4"><%= food.price %></td>
          <td class="py-3 px-4"><%= food.quantity %></td>
          <td class="py-3 px-4">
            <%= button_to "Delete", "foods/#{food.id}", method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-2 rounded-lg" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
