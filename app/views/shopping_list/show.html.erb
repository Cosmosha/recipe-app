

<div class="text-center">
  <h2 class="text-3xl font-semibold text-white mt-4 mb-6">Missing Food Items</h2>
</div>

<table class="w-full bg-black bg-opacity-50 shadow-md rounded-lg overflow-hidden">
  <thead class="bg-black bg-opacity-75 border-b text-white">
    <tr>
      <th class="text-left py-3 px-4">Food</th>
      <th class="text-left py-3 px-4">Price</th>
    </tr>
  </thead>
  <tbody>
    <% @missing_foods.each do |food| %>
      <tr class="border-b text-white">
        <td class="py-3 px-4"><%= food.name %></td>
        <td class="py-3 px-4"><%= number_to_currency(food.price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center mt-4">
  <p class="text-white">Total Price of Missing Food: <%= number_to_currency(@total_price) %></p>
</div>
