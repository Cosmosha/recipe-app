<div class="text-center">
  <h2 class="text-3xl font-semibold text-white">Shopping List</h2>
</div>

<div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4 mb-6">
  <div class="bg-black bg-opacity-50 p-4 rounded-md shadow-md text-white">
    <p class="font-semibold">Amount of food items to buy: <span class="ml-4 px-4"><%= @foods.length %></span></p>
  </div>
  <div class="bg-black bg-opacity-50 p-4 rounded-md shadow-md text-white">
    <p class="font-semibold">Total value of food needed: <span class="ml-4 px-4"><%= number_to_currency(@total_price, unit: '$') %></span></p>
  </div>
</div>

<div class="text-center">
  <%= link_to 'Missing Food', missing_food_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
</div>

<table class="w-full bg-black bg-opacity-50 shadow-md rounded-lg overflow-hidden mt-4">
  <thead class="bg-black bg-opacity-75 border-b text-white">
    <tr>
      <th class="text-left py-3 px-4">Food</th>
      <th class="text-left py-3 px-4">Quantity</th>
      <th class="text-left py-3 px-4">Price</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |ingredient| %>
      <tr class="border-b text-white">
        <td class="py-3 px-4"><%= ingredient.name %></td>
        <td class="py-3 px-4"><%= ingredient.total_quantity_recipes %> <%= ingredient.measurement_unit %> </td>
        <td class="py-3 px-4"><%= number_to_currency(ingredient.price * ingredient.total_quantity_recipes, unit: '$') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
